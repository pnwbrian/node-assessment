<html>
  <head>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  </head>
  <body>
    <div style="display: flex; margin: 20px">
      <div style="width: 150px; float: left; padding: 5px">
        <img height="200px" src="<%= movie['Poster'] %>"/>
      </div>
      <div style="flex-grow: 1; padding-left: 5px">
        <div style="font-size: 22px">
          <a href="https://www.imdb.com/title/<%= movie['imdbID'] %>/" target="_blank">
            <%= movie['Title'] %>
          </a>
        </div>
        <div>Released <%= movie['Year'] %></div>
        <div>Rated <%= movie['Rated'] %></div>
        <div>Directed by <%= movie['Director'] %></div>
        <div>Starring <%= movie['Actors'] %></div>
      </div>
    </div>

    <form action="/fav-notes" method="post" id="fav-notes-form" style="margin: 20px">
      <div class="form-group">
        <blockquote>
          <div class="mb-3">
              <label for="notes" class="form-label">Notes</label>
              <input type="text" class="form-control" id="notes" name="notes" value="<%= notes %>" placeholder="Your notes">
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="favorite" name="favorite" <% if (favorite) { %>checked="checked"<% } %>>
              <label class="form-check-label" for="exampleCheck1">Favorite</label>
            </div>
            <input type="hidden" name="movieId" value="<%= imdbID %>">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </blockquote>
      </div>
    </form>

    <div style="margin:20px">
      <button onclick="javascript:window.open('../search','_self')" class="btn btn-primary btn-sm">Back</button>
    </div>

  </body>
</html>