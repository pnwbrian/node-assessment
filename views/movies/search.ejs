<html>
  <head>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  </head>
  <body>
    <div class="container" style="margin: 20px">
    <h3>Movie Search</h3>
    <form action="/search" method="post" id="search-form">
      <div class="form-group">

      <div class="input-group">
        <input class="form-control" type="text" name="term" placeholder="Enter search text">
        <input class="form-control" type="text" name="page" placeholder="Page#">
        <div class="input-group-append">
          <button class="btn btn-outline-primary" type="submit">Submit</button>
        </div>
      </div>

      </div>
    </form>
    <% if (movies &&  movies.length > 0) { %>
      <div style="margin-bottom: 12px">SHOWING FIRST <%= movies.length %> RESULTS</div>
      <ul>
      <% movies.forEach(function(movie) { %>
        <li><a href="/movie/<%= movie["imdbID"] %>"><%= movie["Title"] %></a></li>
      <% }); %>
      </ul>
    <% } %>
    </div>
  </body>
</html>
